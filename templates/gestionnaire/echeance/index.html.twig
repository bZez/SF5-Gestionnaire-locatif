{% extends 'gestionnaire/base.html.twig' %}

{% block title %} - UTILITAIRE D'ENVOI D'AVIS D'ECHEANCE!{% endblock %}

{% block body %}
    <style>
        body {
            overflow: hidden;
        }
        form{
            position: absolute;
            top: 0;
            left: 260px;
            width:calc(100% - 260px);
            height: 100%;
            border: 4px dashed #383b3e;
        }
        form p{
            width: 100%;
            height: 100%;
            text-align: center;
            line-height: calc(100vh - 100px);
            color: #383b3e;
            font-family: Arial;
        }
        form input{
            position: absolute;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            outline: none;
            opacity: 0;
        }
        form button{
            margin: 0;
            color: #fff;
            background: #16a085;
            border: none;
            width:100%;
            height: 100px;
            border-radius: 4px;
            border-bottom: 4px solid #117A60;
            transition: all .2s ease;
            outline: none;
            font-size: xx-large;
        }
        form button:hover{
            background: #149174;
            color: #0C5645;
        }
        form button:active{
            border:0;
        }

    </style>
    <form action="{{ path('echeance') }}" method="post" enctype="multipart/form-data">
        <button type="submit">Envoyer !</button>
        <input type="file" name="file" required accept=".zip">
        <p class="m-auto"><i class="fa fas fa-file-archive fa-4x"> DEPOSEZ VOTRE ZIP</i></p>
    </form>
{% endblock %}
