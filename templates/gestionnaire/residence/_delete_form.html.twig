<form method="post" action="{{ path('residence_delete', {'id': residence.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ residence.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa fas fa-times"></i></button>
</form>
