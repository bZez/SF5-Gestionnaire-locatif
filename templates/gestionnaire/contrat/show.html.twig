{% extends 'gestionnaire/base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ contrat.debut ? contrat.debut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ contrat.fin ? contrat.fin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_gen</th>
                <td>{{ contrat.dateGen ? contrat.dateGen|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ contrat.duree }}</td>
            </tr>
            <tr>
                <th>Pdf</th>
                <td>{{ contrat.pdf }}</td>
            </tr>
            <tr>
                <th>UniversignTransId</th>
                <td>{{ contrat.universignTransId }}</td>
            </tr>
            <tr>
                <th>UniversignSignId</th>
                <td>{{ contrat.universignSignId }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ contrat.signature ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_signature</th>
                <td>{{ contrat.dateSignature ? contrat.dateSignature|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contrat_index') }}">back to list</a>

    <a href="{{ path('contrat_edit', {'id': contrat.id}) }}">edit</a>

    {{ include('gestionnaire/contrat/_delete_form.html.twig') }}
{% endblock %}
